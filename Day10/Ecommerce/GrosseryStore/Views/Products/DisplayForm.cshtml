@{
    ViewData["Title"] = "Insert Product Page";
}

<div>
  <h2>Add Product</h2>
    <form action="/products/insert">
  <div class="form-group">
    <label for="prodId">Product ID</label>
    <input type="text" name="prodId" class="form-control" id="prodId" placeholder="Product ID">
  </div>
  <br/>
  <div class="form-group">
    <label for="prodName">Product Name</label>
    <input type="text" class="form-control" id="prodName" name="prodName" placeholder="Product Name">
  </div>
  <br/>
  <div class="form-group">
    <label for="price">Product Price</label>
    <input type="text" class="form-control" id="price" name="price" placeholder="Product Price">
  </div>
  <br/>
  <div class="form-group">
    <label for="avlbUnits">Available Units</label>
    <input type="text" class="form-control" id="avlbUnits" name="avlbUnits" placeholder="Available Stock">
  </div>
  <br/>
  <br/>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
</div>